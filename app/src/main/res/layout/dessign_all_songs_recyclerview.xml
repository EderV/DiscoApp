<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true"
    android:id="@+id/dasr_CardView">


    <LinearLayout
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_145sdp"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/dasr_iv_SongImage"
            android:layout_width="@dimen/_136sdp"
            android:layout_height="@dimen/_94sdp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/dasr_tv_SongName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Text view tittle"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dasr_tv_SongArtist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Text view subtittle"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
</android.support.v7.widget.CardView>